@model IEnumerable<Assignment_AI.Models.Transaction>
@{
    ViewData["Title"] = "Office Transactions";
}

<h1>Office Transactions</h1>

<a class="btn btn-primary mb-3" asp-action="Create">Add Transaction</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Credit</th>
            <th>Debit</th>
            <th>Running Balance</th>
        </tr>
    </thead>
    <tbody>
    @{
        foreach (var item in Model)
        {
            decimal credit = item.Type == Assignment_AI.Models.TransactionType.Credit ? item.Amount : 0;
            decimal debit = item.Type == Assignment_AI.Models.TransactionType.Debit ? item.Amount : 0;
    <tr>
        <td>@item.Date.ToString("yyyy-MM-dd")</td>
        <td>@item.Description</td>
        <td>@(credit > 0 ? credit.ToString("C") : "")</td>
        <td>@(debit > 0 ? debit.ToString("C") : "")</td>
        <td>@item.Balance.ToString("C")</td>
    </tr>
        }
    }
    </tbody>
</table>
